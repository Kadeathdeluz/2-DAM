<Page x:Class="Academia.ListCourses"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Academia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListCourses">
    <Grid>
        <DataGrid x:Name="showCoursesDG" FontSize="14" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Curso" Binding="{Binding CourseName}"/>
                <DataGridTextColumn Header="Duración (h)" Binding="{Binding Duration}"/>
                <DataGridTextColumn Header="Profesor" Binding="{Binding ProfessorName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

<Window x:Class="AcademiaSergioAdellJorge.AñadidoEstudiantes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademiaSergioAdellJorge"
        mc:Ignorable="d"
        Title="Academia DIDAM" Height="380" Width="360" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="Beige">

    <Window.Resources>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFBAF2F9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="30"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Width" Value="130"/>
                    <Setter Property="Height" Value="40"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="40">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Button Content="Volver" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                FontSize="12"
                Width="auto" 
                Height="auto" 
                Margin="0, -20, 0, 0"
                Click="btnVolver_Click"/>

        <TextBlock
                   Text="Añadir Estudiante"
                   FontSize="20"
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Center" Margin="57,0,0,0"/>

        <local:UserControlTxtBox x:Name="txtNombre" 
                         Grid.Row="1" 
                         NombreValor="Nombre:"
                         />

        <local:UserControlTxtBox x:Name="txtApellido" 
                         Grid.Row="2" 
                         NombreValor="Apellido:"
                         />

        <local:UserControlTxtBox x:Name="txtEdad" 
                         Grid.Row="3" 
                         NombreValor="Edad:"
                         />

        <Button Grid.Row="4"
                Content="Añadir" 
                Click="btnAñadir_Click"/>

    </Grid>
</Window>

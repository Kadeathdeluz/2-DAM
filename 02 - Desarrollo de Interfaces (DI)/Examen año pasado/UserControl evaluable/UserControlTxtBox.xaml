<UserControl x:Class="AcademiaSergioAdellJorge.UserControlTxtBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcademiaSergioAdellJorge"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="280" Background="Beige">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
     
        <TextBlock x:Name="tbNombreValor"
                   Grid.Column="0"
                   FontSize="16" 
                   TextAlignment="Left"
                   VerticalAlignment="Center"
                   Text="{Binding NombreValor}"/>
              
        <TextBox x:Name="txtValor"
                 Grid.Column="1"
                 FontSize="16" 
                 FontWeight="Light" 
                 Background="White"
                 Height="25"
                 Width="190"
                 Text="{Binding Valor}"/>

        <Button x:Name="btnBorrar"
                Grid.Column="1"
                Content="X" 
                Width="30" 
                Height="25"
                HorizontalAlignment="Right"
                Background="Transparent" 
                Foreground="LightGray" 
                BorderThickness="0"
                Click="btnBorrar_Click"/>
        
    </Grid>
</UserControl>

<Window x:Class="PantallaLoginWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PantallaLoginWPF"
        mc:Ignorable="d"
        Title="Inicio" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Content="¿Qué desea hacer: Registrarse o Logearse?" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" />
        <Button Grid.Row="1" 
                Content="Registro" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                x:Name="botonRegistro"
                Click="Abrir_Registro"/>
        <Button Grid.Row="1" 
                Grid.Column="1" 
                Content="Login" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                x:Name="botonLogin"
                Click="Abrir_Login"/>
    </Grid>
</Window>
